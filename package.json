  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --mode development --config ./webpack-config/webpack.dev.js",
    "build": "cross-env NODE_ENV=production webpack --mode production --config ./webpack-config/webpack.prod.js",
    "dashboard": "webpack-dashboard -- webpack-dev-server --mode development --config ./webpack-config/webpack.dev.js",
    "check-type": "tsc --watch",
    "lint": "eslint --ext .tsx,.ts,.js,jsx --fix ./src",
